<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#97d24d" />
            <gradient android:angle="-90" android:startColor="#97d24d" android:endColor="#97d24d"  />
        </shape>
    </item>


    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#a7d46f" />
            <solid android:color="#a7d46f"/>
        </shape>

    </item>


    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#a7d46f" />
            <gradient android:angle="-90" android:startColor="#a7d46f" android:endColor="#a7d46f" />
        </shape>
    </item>


</selector>