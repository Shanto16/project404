<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <include
           layout="@layout/cardview_current_trip" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-8dp"

                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/cam_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forground_camera"
                    android:drawableTop="@drawable/btn_camera"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:layout_marginBottom="-8dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Camera" />

                <Button
                    android:id="@+id/nav_restaurants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/foreground_restaurants"
                    android:drawableTop="@drawable/ic_restaurants"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="-8dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Restaurants" />

                <Button
                    android:id="@+id/nav_fuel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forground_gas"
                    android:layout_marginBottom="-8dp"
                    android:paddingEnd="16dp"
                    android:drawableTop="@drawable/ic_gas_pumps"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Fuel Stations" />

                <Button
                    android:id="@+id/nav_police"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-8dp"

                    android:background="@drawable/forground_police"
                    android:drawableTop="@drawable/ic_police_station"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Police Station" />


                <Button
                    android:id="@+id/my_expense_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/forground_my_expense"
                    android:drawableTop="@drawable/ic_my_expense"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="My Expense"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/nav_hospitals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forground_hospital"
                    android:drawableTop="@drawable/ic_hospitals"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:layout_marginBottom="-8dp"

                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Hospitals" />

                <Button
                    android:id="@+id/nav_hotels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-8dp"
                    android:background="@drawable/forground_hotels"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_local_hotels"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Hotels" />


                <Button
                    android:id="@+id/nav_spots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-8dp"
                    android:background="@drawable/forground_tourists"
                    android:drawableTop="@drawable/ic_tourist_spots"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Tourist Spots" />

                <Button
                    android:id="@+id/nav_maps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-8dp"
                    android:background="@drawable/forground_maps"
                    android:drawableTop="@drawable/ic_maps"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Maps" />


                <Button
                    android:id="@+id/team_expense_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/forground_team_expense"
                    android:drawableTop="@drawable/ic_team_expense"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="20dp"
                    android:drawablePadding="-50dp"
                    android:text="Team Expense" />


            </LinearLayout>
        </LinearLayout>




        <Button
            android:id="@+id/nav_finish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:background="@drawable/btn_dismiss"
            android:drawableLeft="@drawable/ic_end_trip_svg"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="60dp"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:paddingStart="90dp"
            android:paddingEnd="120dp"
            android:text="End Trip" />


    </LinearLayout>

</ScrollView>