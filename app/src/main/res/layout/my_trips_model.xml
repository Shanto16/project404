<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="16dp"
    android:background="#FFFFFF"
    app:cardElevation="20dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bg_trip"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_test" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="Journey to the sea"
                android:layout_marginTop="4dp"
                android:textColor="#2c2c2c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tour_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tour_name"
                android:layout_marginTop="6dp"
                android:text="from DHAKA to COX'S BAZAAR"
                android:textColor="@color/font_normal"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tour_avg_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tour_route"
                android:layout_marginTop="2dp"
                android:text="Avg. expense per person: "
                android:textColor="@color/font_normal"
                android:textSize="10sp" />



            <LinearLayout
                android:id="@+id/date_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/tour_avg_expense"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tour_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tour_name"
                    android:text="Date: "
                    android:textColor="@color/font_normal"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/tour_date_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tour_name"
                    android:text=""
                    android:textColor="@color/font_normal"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tour_date_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tour_name"
                    android:text=""
                    android:textColor="@color/font_normal"
                    android:textSize="10sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/tour_team_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/date_lin"
                android:layout_below="@+id/date_lin"
                android:text="Team size : 4"
                android:textColor="@color/font_normal"
                android:layout_marginBottom="8dp"
                android:textSize="10sp" />


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>