<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#eca674" />
            <gradient android:angle="-90" android:startColor="#eca674" android:endColor="#eca674"  />
        </shape>
    </item>


    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#ec9455" />
            <solid android:color="#00ffffff"/>
        </shape>

    </item>


    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#ec9455" />
            <gradient android:angle="-90" android:startColor="#ec9455" android:endColor="#ec9455" />
        </shape>
    </item>


</selector>